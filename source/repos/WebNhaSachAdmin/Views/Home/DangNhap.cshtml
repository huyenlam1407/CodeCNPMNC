
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<style>
    .container {
        width: 400px;
        background-color: white;
        padding: 20px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        padding-right: 40px;
        margin-left:70px;
    }

    h2 {
        text-align: center;
        color: #333;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            display: block;
            font-size: 14px;
            margin-bottom: 5px;
            color: #555;
        }

    .form-control {
        width: 100%;
        padding: 10px;
        font-size: 14px;
        border: 1px solid #ccc;
        border-radius: 4px;
        transition: border-color 0.3s;
    }

        .form-control:focus {
            outline: none;
            border-color: #007bff;
        }

    .radio-group {
        display: flex;
        justify-content: flex-start; /* Hoặc sử dụng 'center' */
    }

        .radio-group label {
            margin-right: 10px; /* Điều chỉnh khoảng cách tùy thích */
        }

    .btn {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn:hover {
            background-color: #0056b3;
        }

    .privacy-policy {
        text-align: center;
        font-size: 12px;
        margin-top: 15px;
    }

        .privacy-policy a {
            color: #007bff;
            text-decoration: none;
        }

    .error-message {
        color: red;
        font-size: 12px;
        margin-top: 5px;
    }

    body {
        font-family: Arial, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh; /* Đảm bảo chiều cao tối thiểu là 100% chiều cao viewport */
        background-color: #f7f7f7;
        margin: 0; /* Loại bỏ margin mặc định */
    }

    .alert {
        position: fixed; /* Hoặc absolute nếu bạn muốn nó di chuyển theo phần tử chứa */
        top: 20px; /* Khoảng cách từ trên */
        right: 20px; /* Khoảng cách từ bên phải */
        z-index: 1000; /* Đảm bảo nó hiển thị trên các phần tử khác */
        width: 300px; /* Kích thước tối đa của thông báo */
        padding: 15px;
        margin-bottom: 20px;
        border-radius: 4px;
    }

    .alert-success {
        background-color: #dff0d8;
        color: #3c763d;
        border: 1px solid #d6e9c6;
    }

    .alert-danger {
        background-color: #f2dede;
        color: #a94442;
        border: 1px solid #ebccd1;
    }
    h1 {
        text-align: center;
        color: #FF0000;
    }
</style>
<h1>
    Bạn chưa đăng nhập vui lòng đăng nhập!
</h1>
<div class="notification-area">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }
</div>

<div class="container">
    <h2>Đăng Nhập</h2>

    @using (Html.BeginForm("DangNhap", "Home"))
    {
        @Html.ValidationSummary(true, "", new { @class = "error-message" })

        <div class="form-group">
            <label for="tendn">Tên đăng nhập:</label>
            @Html.TextBox("username", null, new { @class = "form-control", @id = "tendn", required = "required", placeholder = "Nhập tên đăng nhập" })
        </div>

        <div class="form-group">
            <label for="matkhau">Mật khẩu:</label>
            @Html.Password("password", null, new { @class = "form-control", @id = "matkhau", required = "required", placeholder = "Nhập mật khẩu" })
        </div>

        <button type="submit" class="btn">Đăng nhập</button>
    }
</div>


